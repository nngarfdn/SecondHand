<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextView Style -->
    <style name="TextView.Heading.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Heading.Normal" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Body.Normal" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_tab_text_appreance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="home_banner_image_appreance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/_14sdp</item>
    </style>

</resources>